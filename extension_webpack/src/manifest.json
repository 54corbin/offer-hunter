{
  "manifest_version": 3,
  "name": "Offer Hunter",
  "version": "1.0",
  "description": "A Chrome extension to help you hunt for offers.",
  "permissions": [
    "storage",
    "activeTab",
    "scripting",
    "contextMenus",
    "downloads"
  ],
  "host_permissions": [
    "https://www.seek.com.au/*",
    "https://www.linkedin.com/*",
    "<all_urls>"
  ],
  "content_scripts": [
    {
      "matches": ["https://www.seek.com.au/*"],
      "js": ["seek.bundle.js"]
    },
    {
      "matches": ["https://www.linkedin.com/jobs/search/*"],
      "js": ["linkedin.bundle.js"]
    }
  ],
  "background": {
    "service_worker": "background.bundle.js"
  },
  "action": {
    "default_icon": {
      "16": "icon16.svg",
      "48": "icon48.svg",
      "128": "icon128.svg"
    }
  },
  "icons": {
    "16": "icon16.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "web_accessible_resources": [
    {
      "resources": ["assets/*"],
      "matches": ["<all_urls>"]
    }
  ]
}