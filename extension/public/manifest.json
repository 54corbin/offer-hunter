{
  "manifest_version": 3,
  "name": "Offer Hunter",
  "version": "0.1.0",
  "description": "An extension to help automate job applications.",
  "action": {
    "default_icon": "icon16.svg"
  },
  "icons": {
    "16": "icon16.svg",
    "32": "icon32.svg",
    "48": "icon48.svg",
    "128": "icon128.svg"
  },
  "permissions": ["storage", "activeTab", "offscreen"],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  },
  "background": {
    "service_worker": "background.bundle.js"
  },
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["mainContent.js"]
    },
    {
      "matches": [
        "*://*.linkedin.com/jobs/view/*",
        "*://*.indeed.com/jobs*",
        "*://*.glassdoor.com/Job/*",
        "*://*.ziprecruiter.com/c/*"
      ],
      "js": ["formDetector.js"]
    }
  ]
}
